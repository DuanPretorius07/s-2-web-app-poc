{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/serverless"
    },
    {
      "source": "/restricted",
      "destination": "/api/serverless"
    },
    {
      "source": "/((?!api/|restricted).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/serverless.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
